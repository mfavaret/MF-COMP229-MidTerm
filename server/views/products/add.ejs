<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <!-- This is a form to add a new Product -->
        <form class="form" method="post">
          <div class="form-group">
            <label for="IdTextField">Product id</label>
            <input
              type="text"
              class="form-control"
              id="IdTextField"
              placeholder="Product id"
              name="Productid"
              required
            />
          </div>
          <div class="form-group">
            <label for="NameTextField">Product Name</label>
            <input
              type="text"
              class="form-control"
              id="NameTextField"
              placeholder="Product name"
              name="Productname"
              required
            />
          </div>
  
          <!-- I used a text area instead of input to have more space for description -->
          <div class="form-group">
            <label for="DescTextField">Description</label>
            <textarea
              type="text"
              class="form-control"
              id="DescTextField"
              placeholder="Product Description"
              name="Description"
              required
            ></textarea>
          </div>
  
          <!-- For this field I added step="any" to be able to insert float number -->
          <div class="form-group">
            <label for="PriceTextField">Price</label>
            <input
              type="number"
              step="any"
              class="form-control"
              id="PriceTextField"
              placeholder="Product Price"
              name="price"
              required
            />
          </div>
  
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-check-square-o"></i> Submit
          </button>
          <a href="/products" class="btn btn-warning"
            ><i class="fa fa-undo"></i> Cancel</a
          >
        </form>
      </div>
    </div>
  </div>

